datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Voucher {
  code      String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  isValid   Boolean?
  tombola   Tombola? @relation(fields: [tombolaId], references: [id])
  tombolaId String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Verification {
  code       String?
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  isVerified Boolean?
  updatedAt  DateTime @updatedAt
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
}

model Tombola {
  active    Boolean?
  createdAt DateTime  @default(now())
  drawDate  DateTime?
  id        String    @id @default(cuid())
  prize     String?
  updatedAt DateTime  @updatedAt
  vouchers  Voucher[]
}

model User {
  createdAt     DateTime       @default(now())
  email         String?        @unique
  firstName     String?
  id            String         @id @default(cuid())
  lastName      String?
  password      String
  roles         Json
  updatedAt     DateTime       @updatedAt
  username      String         @unique
  verifications Verification[]
  vouchers      Voucher[]
}
